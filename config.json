{
  "port": 3000,
  "routes": [
    {
      "route": "/users/",
      "handle": "proxy",
      "proxy": "http://localhost:8090",
      "stub": "users.json",
      "dynamicStub": "user conditions",
      "stubs": [
        {
          "name": "admins.json",
          "description": "A list of admins, this returns an array."
        },
        {
          "name": "users.json",
          "description": "this is the general users"
        }
      ],
      "dynamicStubs": [
        {
          "name": "user conditions",
          "description": "this is an example conditional stubing",
          "defaultStub": "id.json",
          "conditions": [
            {
              "eval": "req.body.user == 'admin'",
              "stub": "admins.json"
            },
            {
              "eval": "req.query.name == 'anunay'",
              "stub": "users.json"
            }
          ]
        }
      ]
    },
    {
      "route": "/id/",
      "handle": "dynamicStub",
      "proxy": "http://localhost:8090",
      "stub": "id.json",
      "dynamicStub": "random conditions",
      "stubs": [
        {
          "name": "id.json",
          "description": "A list of ids"
        },
        {
          "name": "newStub.json",
          "description": "dummy stub for example"
        }
      ],
      "dynamicStubs": [
        {
          "name": "random conditions",
          "description": "this is conditional stubing for ids",
          "defaultStub": "id.json",
          "conditions": [
            {
              "eval": "req.body.id == 'id'",
              "stub": "id.json"
            },
            {
              "eval": "req.body.newStub == 'new'",
              "stub": "newStub.json"
            }
          ]
        }
      ]
    },
    {
      "route": "/index/",
      "handle": "stub",
      "proxy": "http://localhost:8090",
      "stub": "index.html",
      "dynamicStub": "",
      "stubs": [
        {
          "name": "index.html",
          "description": "You can even stub html files"
        },
        {
          "name": "error.html",
          "code": 403,
          "description": "an error page with it's error code"
        },
        {
          "name": "index.xml",
          "description": "This is an example xml file"
        }
      ],
      "dynamicStubs": []
    },
    {
      "route": "/truthy/",
      "handle": "dynamicStub",
      "proxy": "http://localhost:3000",
      "stubs": [
        {
          "name": "true.json",
          "description": "returns true :)"
        },
        {
          "name": "false.json",
          "description": "returns false :)"
        },
        {
          "name": "ambiguous.json",
          "code": 418,
          "description": "ambiguous teapot"
        }
      ],
      "dynamicStubs": [
        {
          "name": "dynamic stub",
          "description": "its a dynamic stub",
          "defaultStub": "ambiguous.json",
          "conditions": [
            {
              "eval": "req.query.return == \"true\"",
              "stub": "true.json"
            },
            {
              "eval": "req.query.return == \"false\"",
              "stub": "false.json"
            }
          ]
        },
        {
          "name": "single dynamic stub",
          "description": "checking one condition",
          "defaultStub": "ambiguous.json",
          "conditions": [
            {
              "eval": "req.query.return == \"true\"",
              "stub": "true.json"
            }
          ]
        },
        {
          "name": "no dynamic",
          "description": "something goes here",
          "defaultStub": "ambiguous.json",
          "conditions": []
        }
      ],
      "dynamicStub": "dynamic stub"
    }
  ],
  "global": {
    "delay": 0,
    "headers": {
      "Access-Control-Allow-Origin": "*",
      "X-Powered-By": "mocknode"
    }
  }
}